  <description>PLG_XMAP_COM_MIJOPOLLS_DESC</description>
	<files>
		<filename xmap_ext="com_mijopolls">com_mijopolls.php</filename>
	</files>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_xmap_com_mijopolls.ini</language>
